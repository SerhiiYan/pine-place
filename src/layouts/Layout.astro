---
// Получаем заголовок страницы, который передали из index.astro или другой страницы
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Pine Place - Уникальные домики для отдыха в Беларуси" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> <!-- Положите ваш favicon в папку public -->
    
    <!-- Подключаем какой-нибудь красивый шрифт, например, с Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <title>{title}</title>
</head>
<body>
    <Header />
    <main> <!-- Оборачиваем <slot/> в <main> для семантики -->
      <slot />
    </main>
    <Footer />
</body>
</html>

<style is:global>
    /* 
      Глобальные стили, которые будут применяться ко всему сайту.
      Это хорошее место для сброса стилей и определения базовых вещей.
    */
    :root {
        --font-primary: 'Montserrat', sans-serif;
    }

    html {
        font-family: var(--font-primary);
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        color: #1a1a1a;
    }

    /* Сделаем изображения адаптивными по умолчанию */
    img {
        max-width: 100%;
        height: auto;
    }
    
</style>