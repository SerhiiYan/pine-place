---
const { host } = Astro.props;
if (!host) return null;
---

<section class="host-section">
  <div class="host-profile">
    <img src={host.avatar} alt={`Фотография хозяина: ${host.name}`} class="host-avatar" />
    <div class="host-info">
      <h3>Hosted by {host.name}</h3>
      <p>Joined in {host.joined}</p>
    </div>
  </div>
</section>

<style>
  .host-section {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }
  .host-profile {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .host-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    object-fit: cover;
  }
  .host-info h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1.25rem;
  }
  .host-info p {
    margin: 0;
    color: #6c757d;
  }
</style>