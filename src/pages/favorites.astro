---
// src/pages/favorites.astro
import Layout from '@/layouts/Layout.astro';
import FavoritesGrid from '@/components/listings/FavoritesGrid.jsx';
import FavoritesActions from '@/components/listings/FavoritesActions.jsx'; // 1. Импортируем новый компонент
import allListings from '@/data/listings.json';
---

<Layout title="Избранное | Pine&Place">
  <div class="page-container">
    <header class="page-header">
      <h1>Избранное</h1>
      {/* 2. Добавляем наш React-компонент с директивой client:load */}
      <FavoritesActions allListings={allListings} client:load />
    </header>
    
    <FavoritesGrid allListings={allListings} client:visible />
  </div>
</Layout>

<style>
  .page-container {
    max-width: 1200px;
    margin: 4rem auto;
    padding: 0 1.5rem;
  }
  .page-header {
    /* 3. Превращаем хедер в flex-контейнер */
    display: flex; 
    justify-content: space-between; 
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e9ecef;
  }
  .page-header h1 {
    font-size: 2.5rem;
    margin: 0;
  }
  
  /* Стили для сетки и заглушки остаются те же */
  :global(.listings-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  :global(.no-results-placeholder) {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    background-color: #f8f9fa;
    border-radius: 12px;
  }
  :global(.no-results-placeholder h3) {
    font-size: 1.5rem;
    color: #333;
  }
  :global(.no-results-placeholder p) {
    color: #6c757d;
  }
</style>