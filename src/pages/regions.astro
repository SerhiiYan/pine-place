---
import Layout from '@/layouts/Layout.astro';
import allRegions from '@/data/regions.json';
import transliterate from '@/utils/slugify.js';
---

<Layout 
  title="Регионы Беларуси: Интерактивный путеводитель"
  description="Выберите регион из списка, чтобы погрузиться в его атмосферу и узнать уникальные особенности."
>
  <div class="showcase-container">
    <!-- 1. ЛЕВЫЙ БЛОК: СПИСОК РЕГИОНОВ -->
    <aside class="region-list-wrapper">
      <header class="page-header">
        <h1>Исследуйте Беларусь</h1>
        <p>Выберите регион, чтобы погрузиться в его атмосферу.</p>
      </header>
      <nav class="region-list">
        <ul>
          {allRegions.map((region, index) => (
            <li>
              <button 
                class={`region-button ${index === 0 ? 'is-active' : ''}`}
                data-region-slug={transliterate(region.name)}
                data-name={region.name}
                data-crest={region.crest}
                data-image={region.image}
                data-description={region.description}
                type="button"
              >
                <img src={region.crest} alt="" class="region-button-crest"/>
                <span>{region.name}</span>
              </button>
            </li>
          ))}
        </ul>
      </nav>
    </aside>

    <!-- 2. ПРАВЫЙ БЛОК: ВИТРИНА -->
    <main class="region-showcase">
      <!-- Контейнер для плавно сменяющихся фонов -->
      <div class="showcase-bg-container">
        {allRegions.map((region, index) => (
          <div
            class={`showcase-bg ${index === 0 ? 'is-visible' : ''}`}
            style={`background-image: url(${region.image})`}
            data-region-slug={transliterate(region.name)}
          ></div>
        ))}
      </div>
      
      <div class="showcase-content">
        <h2 id="showcase-title">{allRegions[0].name}</h2>
        <p id="showcase-description">{allRegions[0].description}</p>
        <a id="showcase-link" href={`/region/${transliterate(allRegions[0].name)}`} class="showcase-button">
          Начать свое путешествие &rarr;
        </a>
      </div>
    </main>
  </div>
</Layout>

<script define:vars={{ allRegions, transliterate }}>
  document.addEventListener('DOMContentLoaded', () => {
    const regionButtons = document.querySelectorAll('.region-button');
    const showcaseTitle = document.getElementById('showcase-title');
    const showcaseDescription = document.getElementById('showcase-description');
    const showcaseLink = document.getElementById('showcase-link');
    const backgroundImages = document.querySelectorAll('.showcase-bg');

    function updateShowcase(button) {
      // 1. Обновляем текстовый контент
      showcaseTitle.textContent = button.dataset.name;
      showcaseDescription.textContent = button.dataset.description;
      showcaseLink.href = `/region/${button.dataset.regionSlug}`;
      
      // 2. Управляем активным классом для кнопок
      regionButtons.forEach(btn => btn.classList.remove('is-active'));
      button.classList.add('is-active');

      // 3. Плавно меняем фоновое изображение
      backgroundImages.forEach(bg => {
        if (bg.dataset.regionSlug === button.dataset.regionSlug) {
          bg.classList.add('is-visible');
        } else {
          bg.classList.remove('is-visible');
        }
      });
    }

    regionButtons.forEach(button => {
      // Обновление по наведению для десктопа
      button.addEventListener('mouseenter', () => updateShowcase(button));
      // Обновление по клику для мобильных и как основной экшен
      button.addEventListener('click', () => {
        window.location.href = showcaseLink.href;
      });
    });
  });
</script>

<style>
  .showcase-container {
    display: flex;
    height: calc(100vh - 71px); /* Высота минус хедер */
    overflow: hidden;
    background: #f8f9fa;
  }

  /* --- 1. ЛЕВАЯ КОЛОНКА: СПИСОК --- */
  .region-list-wrapper {
    width: clamp(320px, 30%, 420px);
    flex-shrink: 0;
    padding: 2rem;
    background: #fff;
    border-right: 1px solid #e9ecef;
    overflow-y: auto;
  }
  .page-header {
    text-align: left;
    margin-bottom: 2rem;
    padding-left: 1rem;
  }
  .page-header h1 { font-size: 2.2rem; color: #2C3E3A; }
  .page-header p { font-size: 1rem; color: #6c757d; }
  
  .region-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .region-button {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    background: transparent;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-align: left;
    transition: background 0.2s ease, color 0.2s ease;
  }
  .region-button-crest {
    width: 40px;
    height: 40px;
  }
  .region-button:hover {
    background: #f8f9fa;
  }
  .region-button.is-active {
    background: #2C3E3A;
    color: #fff;
  }

  /* --- 2. ПРАВАЯ КОЛОНКА: ВИТРИНА --- */
  .region-showcase {
    flex-grow: 1;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem;
  }

  .showcase-bg-container {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
  }
  .showcase-bg {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .showcase-bg.is-visible {
    opacity: 1;
  }
  .showcase-bg::after { /* Затемнение для читаемости */
    content: '';
    position: absolute;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.5);
  }

  .showcase-content {
    position: relative;
    z-index: 2;
    max-width: 550px;
    text-align: center;
    color: #fff;
    transform: translateY(-20px); /* Небольшой визуальный сдвиг вверх */
  }
  #showcase-title {
    font-size: 3.5rem;
    font-weight: 700;
    text-shadow: 2px 2px 10px rgba(0,0,0,0.5);
  }
  #showcase-description {
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 1rem 0 2rem;
    text-shadow: 1px 1px 5px rgba(0,0,0,0.5);
  }
  .showcase-button {
    display: inline-block;
    background: #fff;
    color: #2C3E3A;
    padding: 0.8rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.2s ease;
  }
  .showcase-button:hover {
    background: #f0f0f0;
    transform: scale(1.05);
  }

  /* --- МОБИЛЬНАЯ АДАПТАЦИЯ (Аккордеон) --- */
  @media (max-width: 900px) {
    .showcase-container {
      flex-direction: column;
      height: auto;
      padding-right: 4rem;
    }
    .region-list-wrapper {
      width: 100%;
      border-right: none;
      height: auto;
    }
    .region-showcase {
      /* На мобильных витрина скрыта по умолчанию */
      display: none;
    }
    /* Для простоты, в этой версии на мобильных будет просто список.
       Превращение в аккордеон потребует значительного усложнения скрипта. */
    .page-header h1 { font-size: 2rem; }
  }
</style>