---
// src/pages/partners.astro
import Layout from '@/layouts/Layout.astro';
import TariffSelector from '@/components/partners/TariffSelector.jsx';
import PartnerIntro from '@/components/partners/PartnerIntro.jsx';
import PartnersFaq from '@/components/partners/PartnersFaq.jsx'; 
---

<Layout title="Партнерам | Pine&Place">
  <div class="page-container">
    {/* Блок с текстом теперь находится сверху и по центру */}
    <section class="intro-section">
      <PartnerIntro client:load />
    </section>

    {/* Виджет с тарифами идет следующим, под текстом */}
    <section class="tariffs-section">
      <TariffSelector client:load />
    </section>
    <section class="faq-container-section">
      <h2 class="section-title">Часто задаваемые вопросы</h2>
      <PartnersFaq client:load />
    </section>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 1200px;
    margin: 4rem auto;
    /* Увеличим отступы на мобильных, чтобы карточки не прилипали к краям */
    padding: 0 2rem; 
  }
  .intro-section {
    max-width: 800px;
    margin: 0 auto 4rem auto;
    text-align: center;
  }

  /* 3. Добавляем стили для новой секции */
  .faq-container-section {
    padding-top: 4rem; /* Отступ сверху */
    margin-top: 4rem; /* Отступ от тарифов */
    border-top: 1px solid #e9ecef; /* Красивый разделитель */
  }
  .section-title {
    text-align: center;
    font-size: 2.2rem;
    font-family: var(--font-serif, 'Georgia', serif);
    font-weight: 400;
    margin-bottom: 2.5rem;
  }
  
  @media(max-width: 600px) {
    .page-container {
        padding: 0 1.5rem; /* На совсем маленьких экранах вернем стандартный отступ */
    }
  }
</style>